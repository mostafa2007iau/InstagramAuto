<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:InstagramAuto.Client.ViewModels"
             x:Class="InstagramAuto.Client.Views.RulesPage"
             Title="قوانین پاسخ‌دهی">

    <Grid RowDefinitions="Auto,*" Padding="16">
        <!-- Header -->
        <Frame Grid.Row="0" Margin="0,0,0,16">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout>
                    <Label Text="{Binding PostCaption}"
                           FontSize="16"
                           LineBreakMode="TailTruncation"
                           MaxLines="2" />
                    <Label Text="{Binding RulesCount, StringFormat='{0} قانون فعال'}"
                           TextColor="Gray"
                           FontSize="14" />
                </VerticalStackLayout>
                <Button Grid.Column="1"
                        Text="قانون جدید"
                        Command="{Binding AddRuleCommand}" />
            </Grid>
        </Frame>

        <!-- Rules List -->
        <CollectionView Grid.Row="1"
                       ItemsSource="{Binding Rules}"
                       EmptyView="هیچ قانونی تعریف نشده است.">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,12" Padding="16">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <!-- Rule Name & Status -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Name}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                            
                            <Switch Grid.Row="0" Grid.Column="1"
                                    IsToggled="{Binding Enabled}"
                                    HorizontalOptions="End" />

                            <!-- Condition -->
                            <StackLayout Grid.Row="1" Grid.ColumnSpan="2"
                                       Margin="0,8">
                                <Label Text="شرط:"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Condition}"
                                       TextColor="Gray" />
                            </StackLayout>

                            <!-- Replies -->
                            <StackLayout Grid.Row="2" Grid.ColumnSpan="2"
                                       Margin="0,8">
                                <Label Text="پاسخ‌ها:"
                                       FontAttributes="Bold" />
                                <CollectionView ItemsSource="{Binding Replies}"
                                              HeightRequest="60">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding}"
                                                   TextColor="Gray" />
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>

                            <!-- Direct Message -->
                            <StackLayout Grid.Row="3" Grid.ColumnSpan="2"
                                       Margin="0,8"
                                       IsVisible="{Binding SendDM}">
                                <Label Text="پیام مستقیم:"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding DM.Text}"
                                       TextColor="Gray" />
                                <CollectionView ItemsSource="{Binding DM.Attachments}"
                                              HeightRequest="40"
                                              IsVisible="{Binding DM.Attachments.Count}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding Url}"
                                                   HeightRequest="32"
                                                   WidthRequest="32"
                                                   Aspect="AspectFill" />
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>

                            <!-- Actions -->
                            <StackLayout Grid.Row="4" Grid.ColumnSpan="2"
                                       Orientation="Horizontal"
                                       HorizontalOptions="End"
                                       Spacing="8"
                                       Margin="0,8,0,0">
                                <Button Text="ویرایش"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:RulesViewModel}}, Path=EditRuleCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Text="حذف"
                                        BackgroundColor="Red"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:RulesViewModel}}, Path=DeleteRuleCommand}"
                                        CommandParameter="{Binding .}" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.RowSpan="2"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />
    </Grid>
</ContentPage>
