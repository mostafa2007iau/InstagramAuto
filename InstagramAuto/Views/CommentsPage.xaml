<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:InstagramAuto.Client.ViewModels"
             x:Class="InstagramAuto.Client.Views.CommentsPage"
             Title="Comments">
    <StackLayout>
        <Label Text="Comments" FontSize="24" HorizontalOptions="Center" Margin="0,10" />
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="8" BorderColor="Gray">
                        <StackLayout>
                            <Label Text="{Binding User}" FontAttributes="Bold" FontSize="12" />
                            <Label Text="{Binding Text}" FontSize="14" />
                            <Button Text="Set Rule" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CommentsViewModel}}, Path=SetRuleCommand}" CommandParameter="{Binding .}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Load More" Command="{Binding LoadMoreCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />
    </StackLayout>
</ContentPage>
