<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="InstagramAuto.Client.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:InstagramAuto.Client.ViewModels"
    Title="Settings">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Delay and Rate Limit Settings" />

            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Enable Delay" VerticalOptions="Center" />
                <Switch IsToggled="{Binding EnableDelay}" />
            </StackLayout>

            <StackLayout Padding="0,10">
                <Label Text="Comment Delay (sec)" />
                <Stepper
                    Increment="1"
                    Maximum="60"
                    Minimum="0"
                    Value="{Binding CommentDelay}" />
                <Label HorizontalOptions="Center" Text="{Binding CommentDelay, StringFormat='{}{0} sec'}" />
            </StackLayout>

            <StackLayout Padding="0,10">
                <Label Text="Like Delay (sec)" />
                <Stepper
                    Increment="1"
                    Maximum="60"
                    Minimum="0"
                    Value="{Binding LikeDelay}" />
                <Label HorizontalOptions="Center" Text="{Binding LikeDelay, StringFormat='{}{0} sec'}" />
            </StackLayout>

            <StackLayout Padding="0,10">
                <Label Text="DM Delay (sec)" />
                <Stepper
                    Increment="1"
                    Maximum="60"
                    Minimum="0"
                    Value="{Binding DmDelay}" />
                <Label HorizontalOptions="Center" Text="{Binding DmDelay, StringFormat='{}{0} sec'}" />
            </StackLayout>

            <Button Command="{Binding SaveCommand}" Text="Save Settings" />

            <!-- Error message and copy button -->
            <StackLayout IsVisible="{Binding HasError}" BackgroundColor="#fff0f0" Padding="8" Spacing="4">
                <Label Text="{Binding ErrorMessage}" TextColor="Red" FontAttributes="Bold" />
                <Button Text="کپی خطا" Clicked="OnCopyErrorClicked" FontSize="12" BackgroundColor="#eee" TextColor="Black" Padding="6,2" HorizontalOptions="End" />
                <Editor Text="{Binding ErrorDetails}" IsReadOnly="True" AutoSize="TextChanges" HeightRequest="120" FontSize="12" BackgroundColor="#f8f8f8" TextColor="Black" />
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
