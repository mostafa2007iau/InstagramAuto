<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="InstagramAuto.Client.Views.StoriesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:InstagramAuto.Client.ViewModels"
    Title="استوری‌ها">

    <Grid Padding="10">
        <!--  پیغام خطا و دکمه کپی  -->
        <StackLayout
            IsVisible="{Binding HasError}"
            BackgroundColor="#fff0f0"
            Padding="8"
            Spacing="4">
            <Label
                Text="{Binding ErrorMessage}"
                TextColor="Red"
                FontAttributes="Bold" />
            <Button
                Text="کپی خطا"
                Clicked="OnCopyErrorClicked"
                FontSize="12"
                BackgroundColor="#eee"
                TextColor="Black"
                Padding="6,2"
                HorizontalOptions="End" />
            <Editor
                Text="{Binding ErrorDetails}"
                IsReadOnly="True"
                AutoSize="TextChanges"
                HeightRequest="120"
                FontSize="12"
                BackgroundColor="#f8f8f8"
                TextColor="Black" />
        </StackLayout>

        <CollectionView
            Margin="0,0,0,200"
            ItemsSource="{Binding Items}"
            RemainingItemsThreshold="5"
            RemainingItemsThresholdReachedCommand="{Binding LoadCommand}"
            SelectedItem="{Binding SelectedStory}"
            SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,4"
                        Padding="8"
                        BorderColor="#ddd"
                        CornerRadius="8">
                        <StackLayout>
                            <Label
                                Text="{Binding Id}"
                                FontSize="14"
                                FontAttributes="Bold" />
                            <Label
                                Text="{Binding Caption}"
                                FontSize="14" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--  فرم پاسخ  -->
        <StackLayout
            Padding="10"
            BackgroundColor="#FFFFFF"
            HeightRequest="200"
            VerticalOptions="End">
            <Label FontAttributes="Bold" Text="Reply to Selected Story" />
            <Editor
                AutoSize="TextChanges"
                HeightRequest="60"
                Placeholder="Your message..."
                Text="{Binding ReplyMessage}" />
            <Entry Placeholder="Optional Link URL" Text="{Binding LinkUrl}" />
            <Entry Placeholder="Optional Image URL" Text="{Binding ImageUrl}" />
            <Button
                Command="{Binding ReplyCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}, FallbackValue=true}"
                Text="Send Reply" />
            <Label
                IsVisible="{Binding HasError}"
                Text="{Binding ErrorMessage}"
                TextColor="Red" />
        </StackLayout>
    </Grid>
</ContentPage>
