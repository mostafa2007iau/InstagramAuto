<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:InstagramAuto.Client.ViewModels"
             x:Class="InstagramAuto.Client.Views.ReplyHistoryPage"
             Title="??????? ???????">

    <ContentPage.Resources>
        <Style x:Key="HistoryCard" TargetType="Frame">
            <Setter Property="Margin" Value="16,8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}" />
            <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" 
              Padding="16"
              ColumnDefinitions="*,Auto">
            
            <Picker Title="?????? ???"
                    ItemsSource="{Binding Posts}"
                    SelectedItem="{Binding SelectedPost}"
                    ItemDisplayBinding="{Binding Caption}"/>
            
            <Button Grid.Column="1"
                    Text="??? ???? ???????"
                    Command="{Binding ClearHistoryCommand}"
                    IsEnabled="{Binding SelectedPost, Converter={StaticResource NotNullToBoolConverter}}"
                    BackgroundColor="{StaticResource Danger}"
                    Margin="8,0,0,0"/>
        </Grid>

        <!-- History List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding History}"
                          EmptyView="??? ????? ?? ??????? ???? ?????.">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource HistoryCard}">
                            <Grid RowDefinitions="Auto,Auto,Auto"
                                  RowSpacing="8">
                                <!-- Comment -->
                                <StackLayout>
                                    <Label Text="????? ????:"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"/>
                                    <Label Text="{Binding CommentText}"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"/>
                                </StackLayout>

                                <!-- Reply -->
                                <StackLayout Grid.Row="1">
                                    <Label Text="???? ????? ???:"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"/>
                                    <Label Text="{Binding ReplyText}"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray100}}"/>
                                </StackLayout>

                                <!-- Info -->
                                <Grid Grid.Row="2" 
                                      ColumnDefinitions="Auto,*,Auto">
                                    <Label Text="{Binding RuleName}"
                                           TextColor="{StaticResource Gray500}"
                                           FontSize="12"/>
                                    
                                    <Label Grid.Column="2"
                                           Text="{Binding TimestampText}"
                                           TextColor="{StaticResource Gray500}"
                                           FontSize="12"/>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading -->
        <ActivityIndicator Grid.RowSpan="2"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>

        <!-- Error -->
        <Label Grid.RowSpan="2"
               Text="{Binding ErrorMessage}"
               IsVisible="{Binding HasError}"
               TextColor="{StaticResource Danger}"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
    </Grid>

</ContentPage>