<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="InstagramAuto.Client.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!--  Header  -->
            <Label
                FontSize="24"
                HorizontalOptions="Center"
                Text="Welcome to AutoInsta" />

            <!--  Username & Password  -->
            <Entry Placeholder="Username" Text="{Binding Username}" />
            <Entry
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding Password}" />

            <!--  Login Button  -->
            <Button Command="{Binding LoginCommand}" Text="Login" />

            <!--  Import Session Section  -->
            <Label
                Margin="0,20,0,0"
                FontAttributes="Bold"
                Text="Or import an existing session:" />

            <Editor
                AutoSize="TextChanges"
                HeightRequest="100"
                Placeholder="Paste session JSON or base64 here"
                Text="{Binding ImportSessionText}" />

            <Button Command="{Binding ImportSessionCommand}" Text="Import Session" />

            <!--  Busy Indicator  -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <!--  Error Message  -->
            <Label
                IsVisible="{Binding HasError}"
                Text="{Binding ErrorMessage}"
                TextColor="Red" />

            <Button
                Padding="6,2"
                BackgroundColor="#eee"
                Clicked="OnCopyErrorClicked"
                FontSize="12"
                HorizontalOptions="End"
                IsVisible="{Binding HasError}"
                Text="Copy Error"
                TextColor="Black" />

            <Editor
                AutoSize="TextChanges"
                BackgroundColor="#f8f8f8"
                FontSize="12"
                HeightRequest="180"
                IsReadOnly="True"
                IsVisible="{Binding HasError}"
                Text="{Binding ErrorDetails}"
                TextColor="Black" />

        </StackLayout>
    </ScrollView>
</ContentPage>
