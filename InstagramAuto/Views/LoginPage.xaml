<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="InstagramAuto.Client.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <StackLayout Padding="20" Spacing="15">

        <!--  Header  -->
        <Label
            FontSize="24"
            HorizontalOptions="Center"
            Text="Welcome to AutoInsta" />

        <!--  Username & Password  -->
        <Entry
            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
            Keyboard="Email"
            Placeholder="Username"
            Text="{Binding Username}" />

        <Entry
            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
            IsPassword="True"
            Placeholder="Password"
            Text="{Binding Password}" />

        <!--  Login Button  -->
        <Button x:Name="LoginButton"
            Command="{Binding LoginCommand}"
            IsEnabled="{Binding LoginCommand.CanExecute, Source={x:Reference Name=LoginButton}}"
            Text="Login" />

        <!--  Busy Indicator  -->
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

        <!--  Error Message  -->
        <Label
            IsVisible="{Binding HasError}"
            Text="{Binding ErrorMessage}"
            TextColor="Red" />

        <!-- Copy error button, only visible if there is an error -->
        <Button
            Text="Copy Error"
            IsVisible="{Binding HasError}"
            Clicked="OnCopyErrorClicked"
            BackgroundColor="#eee"
            TextColor="Black"
            FontSize="12"
            Padding="6,2"
            HorizontalOptions="End" />

        <!-- Detailed JSON/Error details (read-only) -->
        <Editor
            IsVisible="{Binding HasError}"
            Text="{Binding ErrorDetails}"
            IsReadOnly="True"
            AutoSize="TextChanges"
            HeightRequest="180"
            FontSize="12"
            BackgroundColor="#f8f8f8"
            TextColor="Black" />

    </StackLayout>
</ContentPage>
